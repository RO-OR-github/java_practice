package javaweek3practice_2;

public class Dog {
	private int age, food;
	private static int total = 0;
	private String color;
    
	public Dog(int age, String color) {
		this(age,0,color);
		++total;
		
	}

	public Dog(int age, int food, String color) {
		this.age = age;
		this.color = color;
		this.food = food;
		++total;
	}


	public String barking() {
		if(food==0) {
			return "矫公疯";
		}else {
			--food;
			return "港港";
		}
	}
	
	public boolean hungry() {
		if(food<=1) {
			return true;
		}else {
			return false;
		}
	}
	
	public boolean sleeping(int df) {
		boolean b=true;
		while(b=true) {
			if(df>0) {
				food += df;
				return false;
			
			}else if(df==0) {
				return true;
			
			}else{
				System.out.println("0俺 捞惑父 林技夸");
				return true;
			}
		}
		
	}
	
	@Override
	public String toString() {
		// TODO 磊悼 积己等 皋家靛 胶庞
		return super.toString();
	}
	
	public void getTotal() {
		System.out.println(total);
	}
	public int getFood() {
		return food;
	}	
	
	
	
}
