package javaweek3practice_2;

import java.util.Scanner;

public class DogTest {
	public static void main(String[] args) {
		String dcolor;
		boolean i = true;
		Scanner sc = new Scanner(System.in);
		Dog[] md =new Dog[5];
		
		md[0] = new Dog(5, "Red");
		md[1] = new Dog(6, "Orange");
		md[2] = new Dog(7, "Yellow");
		md[3] = new Dog(8, "Green");
		md[4] = new Dog(9, "Blue");
		
		
		do {
			System.out.print("색깔을 입력하세요 : ");
			dcolor = sc.nextLine();
			
			switch (dcolor) {
			
	    	case "Red": md[0].barking();
	    				md[0].hungry();
	    				System.out.println(md[0].getFood());
	    				i = false;
	    				break;
	    				
	    	case "Orange": md[1].barking();
						md[1].hungry(); 
	    				System.out.println(md[1].getFood());
	    				i = false;	    				
	    				break;
	    				
	    	case "Yellow": md[2].barking();
						md[2].hungry(); 
	    				System.out.println(md[2].getFood());
	    				i = false;
	    				break;
	    				
	    	case "Green": md[3].barking();
						md[3].hungry();
						System.out.println(md[3].getFood());
	    				i = false;
	    				break;
	    				
	    	case "Blue": md[4].barking();
						md[4].hungry();
						System.out.println(md[4].getFood());
	    				i = false;
	    				break;
	    				
	    	default : System.out.print("잘못 입력하셨습니다. 다시 입력하세요 : ");
	    				dcolor = sc.nextLine();  
	    				break;
			}
	 		
		}while(i = true);
			switch (dcolor) {
		    	case "Red": System.out.println(md[0].getFood());
		    				break;
		    	case "Orange": System.out.println(md[1].getFood());
		    				break;
		    	case "Yellow": System.out.println(md[2].getFood());
		    				break;
		    	case "Green": System.out.println(md[3].getFood());
		    				break;
		    	case "Blue": System.out.println(md[4].getFood());
		    				break;
		    	default : System.out.print("잘못 입력하셨습니다. 다시 입력하세요 : ");
							dcolor = sc.nextLine(); 
							break;
		}
	}

}
