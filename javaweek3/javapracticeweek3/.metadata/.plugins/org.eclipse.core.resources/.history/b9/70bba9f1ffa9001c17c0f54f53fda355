package javaweek3practice_2;

public class Dog {
	private int age, food, total;
	private String color;


	public Dog(int age, int food, int total, String color) {
		super();
		this.age = age;
		this.total = total;
		this.color = color;
		this.food = food;
	}


	public String barking() {
		if(food==0) {
			return "½Ã¹«·è";
		}else {
			--food;
			return "¸Û¸Û";
		}
	}
	
	public boolean hungry() {
		if(food<=1) {
			return true;
		}else {
			return false;
		}
	}
}
