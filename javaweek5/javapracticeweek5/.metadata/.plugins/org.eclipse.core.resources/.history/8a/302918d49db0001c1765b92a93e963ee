package javaweek5_2;

abstract class Phone {
	private String maker, type;
	private int price;
	
	public Phone(String maker, String type, int price) {
		this.maker = maker;
		this.type = type;
		this.price = price;
	}

	public String getMaker() {
		return maker;
	}

	public void setMaker(String maker) {
		this.maker = maker;
	}

	public String getType() {
		return type;
	}

	public void setType(String type) {
		this.type = type;
	}

	public int getPrice() {
		return price;
	}

	public void setPrice(int price) {
		this.price = price;
	}
	

}// 추상 클래스 안에 무조건 추상 메소드가 있지는 않지만 만약 있다면 무조건 상속 재정의적어줘야 한다.
